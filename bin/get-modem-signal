#!/usr/bin/env python3
import argparse
import glob
import re
import sys
from serial import Serial


rssi_to_dbm = {
    2: -109,
    3: -107,
    4: -105,
    5: -103,
    6: -101,
    7: -99,
    8: -97,
    9: -95,
    10: -93,
    11: -91,
    12: -89,
    13: -87,
    14: -85,
    15: -83,
    16: -81,
    17: -79,
    18: -77,
    19: -75,
    20: -73,
    21: -71,
    22: -69,
    23: -67,
    24: -65,
    25: -63,
    26: -61,
    27: -59,
    28: -57,
    29: -55,
    30: -53,
}


def fatal(s):
    print(s, file=sys.stderr)
    sys.exit(1)


def main():
    parser = argparse.ArgumentParser()

    detected = glob.glob('/dev/serial/by-id/*Telit*if06')

    if detected:
        parser.add_argument('port', nargs='?', default=detected[0])
    else:
        parser.add_argument('port')

    args = parser.parse_args()

    with Serial(args.port, 57600, timeout=1.0) as ser:
        ser.write(b'AT+CSQ\r')

        rssi = None

        while True:
            try:
                s = ser.readline().decode()
            except UnicodeDecodeError:
                continue

            if len(s) == 0:
                fatal('device timeout')

            if s.startswith('OK'):
                break

            m = re.match(r'\+CSQ:\s*(\d+),(\d+)', s)

            if m is not None:
                rssi = int(m.group(1))

        try:
            print(rssi_to_dbm[rssi], 'dBm')
        except KeyError:
            fatal('unknown signal level')


if __name__ == '__main__':
    main()
